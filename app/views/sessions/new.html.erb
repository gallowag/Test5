<div class="login">
  <div class="container">
    <div class="form">

    <h1>Log In</h1>
    <%= form_for :session, url: login_path do |f| %>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field(:email, {:class => 'form-control'}) %>
      </div>
      <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field(:password, {:class => 'form-control'}) %>
      </div>
      <div class="actions">
        <br>
        <%= f.submit("Login", {:class => 'btn btn-primary'}) %>
      </div>
    <% end %>

    </div>
  </div>
</div>
