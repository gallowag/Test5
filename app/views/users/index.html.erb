<div class="designers">
  <div class="container">
    <h1><%= @title %></h1>
    <br>
    <% @users.each do |user| %>
      <% if user.designer? %>
      <p>Name: <%= user.username %></p>
      <p>Email: <%= user.email %></p>
      <p>Status: <%= user.privilege %></p>
      <%= form_for(user) do |f| %>
      <div class="field">
        <%= f.hidden_field(:privilege, value: @up) %>
      </div>
      <div class="actions">
        <br>
        <%= f.submit("Accept", {:class => 'btn btn-success'}) %>
      </div>
      <% end %>
      <%= form_for(user) do |f| %>
      <div class="field">
        <%= f.hidden_field(:privilege, value: @down) %>
      </div>
      <div class="actions">
        <br>
        <%= f.submit("Reject", {:class => 'btn btn-danger'}) %>
      </div>
      <% end %>
      <hr>
      <% end %>
    <% end %>
  </div>
</div>
