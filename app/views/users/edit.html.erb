<div class="edit">
  <div class="container">
    <div class="form">

    <h1><%= @title %></h1>
    <br>

    <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field(:username, {:class => 'form-control'}) %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field(:email, {:class => 'form-control'}) %>
    </div>
    <div class="actions">
      <br>
      <%= f.submit("Submit Changes", {:class => 'btn btn-primary'}) %>
    </div>
    <% end %>

    <br>
    <%= link_to "Cancel", profile_path %>

    </div>
  </div>
</div>
